    "basePath": "/auth",
    "schemes": ["http", "https"],
    "paths": {
      "/login": {
        "post": {
          "tags": ["Autenticación"],
          "summary": "Iniciar sesión",
          "parameters": [
            {
              "name": "UserPassJson",
              "in": "body",
              "description": "Objeto JSON con email y contraseña para autenticación",
              "required": true,
              "schema": {
                "$ref": "#/definitions/UserLogin"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Operación exitosa",
              "schema": {
                "type": "object",
                "properties": {
                  "token": {
                    "type": "string",
                    "example": "eyJhbGciOiJIUzI1..."
                  }
                }
              }
            },
            "401": {
              "description": "Credenciales incorrectas"
            }
          }
        }
      }
    },
    "definitions": {
      "UserLogin": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "usuario@example.com"
          },
          "password": {
            "type": "string",
            "example": "password123"
          }
        }
      }
    }
  }
  